<div class="page-header">
  <h1>User - <%= @user.name %></h1>
</div>

<div class="fieldset">
  <dl>
    <dt class="label label-default">Name</dt>
    <dd>
      <pre class="prettyprint"><%= @user.name %></pre>
    </dd>
    <dt class="label label-default">Email</dt>
    <dd>
      <pre class="prettyprint"><%= @user.email %></pre>
    </dd>
    <dt class="label label-default">Created On</dt>
    <dd>
      <pre class="prettyprint"><%= l @user.created_at, format: :long %></pre>
    </dd>
    <dt class="label label-default">Role</dt>
    <dd>
      <pre class="prettyprint"><%= @user.role %></pre>
    </dd>
    <dt class="label label-default">Distribution Center</dt>
    <dd>
      <pre class="prettyprint"><%= @user.distribution_center.try(:name) %></pre>
    </dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to 'Back',
              users_path, :class => 'btn btn-default' %>
  <%= link_to 'Edit',
              edit_user_path(@user), :class => 'btn btn-default' %>
  <%= link_to 'Delete',
              user_path(@user),
              :method => 'delete',
              :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
              :class => 'btn btn-danger' %>
</div>

