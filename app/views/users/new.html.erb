<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.new', 'New %{model}'], :model => User %></h1>
</div>
<%= form_for @user, :html => { :class => 'form-horizontal form-model' } do |f| %>
    <div class="form-group">
      <%= f.label :name, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :name, :class => 'text-field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.email_field :email, :class => 'text-field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.password_field :password, :class => 'text-field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.password_field :password_confirmation, :class => 'text-field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :role, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.select :role, [nil, User::Role::DOCTOR, User::Role::SUPERVISOR] %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :distribution_center_id, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.select :distribution_center_id, DistributionCenter.all.collect {|p| [ p.name, p.id ] }, :include_blank => true %>
      </div>
    </div>

    <div class="form-group">
      <div class='col-md-offset-2 col-md-10'>
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    users_path, :class => 'btn btn-default' %>
      </div>
    </div>
<% end %>


