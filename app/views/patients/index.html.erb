<%- model_class = Patient -%>
<div class="page-header">
  <h1>Patients</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:registration_number) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th>Center</th>
      <th><%= model_class.human_attribute_name(:date_of_birth) %></th>
      <th><%= model_class.human_attribute_name(:fathers_name) %></th>
      <th><%= model_class.human_attribute_name(:gender) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.id %></td>
        <td><%= patient.registration_number %></td>
        <td><%= patient.name %></td>
        <td><%= patient.distribution_center.name %></td>
        <td><%= patient.date_of_birth %></td>
        <td><%= patient.fathers_name %></td>
        <td><%= patient.gender %></td>
        <td>
          <%= link_to 'View', distribution_center_patient_path(@distribution_center, patient), :class => 'btn btn-xs' %>
          <%= link_to 'Edit', edit_distribution_center_patient_path(@distribution_center, patient), :class => 'btn btn-xs' %>
          <%= link_to 'Delete', distribution_center_patient_path(@distribution_center, patient), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_distribution_center_patient_path(@distribution_center),
            :class => 'btn btn-primary' %>
