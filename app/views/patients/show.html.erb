<%- model_class = Patient -%>
<div class="page-header">
  <h1><%=t '.title', :default => Patient %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @patient.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:date_of_birth) %></dt>
      <dd><pre class="prettyprint"><%= @patient.date_of_birth %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:fathers_name) %></dt>
      <dd><pre class="prettyprint"><%= @patient.fathers_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:mothers_name) %></dt>
      <dd><pre class="prettyprint"><%= @patient.mothers_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address) %></dt>
      <dd><pre class="prettyprint"><%= @patient.address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:mobile) %></dt>
      <dd><pre class="prettyprint"><%= @patient.mobile %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:landline) %></dt>
      <dd><pre class="prettyprint"><%= @patient.landline %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:present_complaints) %></dt>
      <dd><pre class="prettyprint"><%= @patient.present_complaints %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:registration_number) %></dt>
      <dd><pre class="prettyprint"><%= @patient.registration_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:gender) %></dt>
      <dd><pre class="prettyprint"><%= @patient.gender %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:blood_group) %></dt>
      <dd><pre class="prettyprint"><%= @patient.blood_group %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              patients_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_patient_path(@patient), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              patient_path(@patient),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

