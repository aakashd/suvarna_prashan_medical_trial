<%- model_class = DistributionCenter -%>
<div class="page-header">
  <h1><%=t '.title', :default => DistributionCenter %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @distribution_center.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address) %></dt>
      <dd><pre class="prettyprint"><%= @distribution_center.address %></pre></dd>
      <dt class="label label-default">Supervisors</dt>
      <dd><pre class="prettyprint"><%= @distribution_center.supervisors.collect(&:name).join(', ') %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              distribution_centers_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_distribution_center_path(@distribution_center), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              distribution_center_path(@distribution_center),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

