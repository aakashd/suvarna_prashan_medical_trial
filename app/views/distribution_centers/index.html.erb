<div class="page-header">
  <h1>Distribution Centers</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Address</th>
      <th>Supervisors</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @distribution_centers.each do |distribution_center| %>
      <tr>
        <td><%= distribution_center.id %></td>
        <td><%= distribution_center.name %></td>
        <td><%= distribution_center.address %></td>
        <td><%= distribution_center.supervisors.collect(&:name).join(', ') %></td>
        <td>
          <%= link_to 'View', distribution_center_path(distribution_center), :class => 'btn btn-xs'%>
          <%= link_to 'Edit', edit_distribution_center_path(distribution_center), :class => 'btn btn-xs'%>
          <%= link_to 'Delete', distribution_center_path(distribution_center), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_distribution_center_path,
            :class => 'btn btn-primary' %>
