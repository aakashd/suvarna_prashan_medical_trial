<%- model_class = CheckupRecord -%>
<div class="page-header">
  <h1><%=t '.title', :default => CheckupRecord %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:height) %></dt>
      <dd><pre class="prettyprint"><%= @checkup_record.height %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:weight) %></dt>
      <dd><pre class="prettyprint"><%= @checkup_record.weight %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:mental_assessment) %></dt>
      <dd><pre class="prettyprint"><%= @checkup_record.mental_assessment %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:physical_assessment) %></dt>
      <dd><pre class="prettyprint"><%= @checkup_record.physical_assessment %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:notes) %></dt>
      <dd><pre class="prettyprint"><%= @checkup_record.notes %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              checkup_records_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_checkup_record_path(@checkup_record), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              checkup_record_path(@checkup_record),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

